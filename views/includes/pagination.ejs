<section class="pagination">
    <% if (currPage !==1) { %> <a href="?page=1">1</a>
        <% }%>
            <% if (hasPreviousPage) { %>
                <a href="?page=<%= previousPage %>">
                    <%= previousPage %>
                </a>
                <% }%>

                    <a class="active" href="?page=<%= currPage %>">
                        <%= currPage %>
                    </a>

                    <% if (hasNextPage) { %>
                        <a href="?page=<%= nextPage %>">
                            <%= nextPage %>
                        </a>
                        <% }%>

                            <% if (nextPage !==lastPage && currPage !==lastPage) { %>
                                <a href="?page=<%= lastPage %>">
                                    <%= lastPage %>
                                </a>
                                <% }%>

</section>